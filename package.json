{
  "name": "chessinator",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "backend",
    "game-server",
    "shared",
    "electron"
  ],
  "scripts": {
    "dev:front": "cd electron  && npm run dev",
    "dev:back": "bun --cwd backend dev",
    "dev:game": "bun --cwd game-server dev",
    "dev": "parallel  --line-buffer --tag ::: \"bun run dev:back\" \"bun run dev:game\" \"bun run dev:front\"",
    "build:front": "bun --cwd electron build",
    "shadcn": "bunx --bun --cwd electron shadcn@latest",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio"
  },
  "devDependencies": {
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.6",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "picomatch": "2.3.1"
  }
}
