{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@game-server": ["./game-server/src"],
      "@game-server/*": ["./game-server/src/*"],
      "@backend": ["./backend/src"],
      "@backend/*": ["./backend/src/*"],
      "@shared": ["./shared/src/index.ts"],
      "@shared/*": ["./shared/src/*"],
      "@/*": ["./electron/src/renderer/src/*"]
    }
  }
}
