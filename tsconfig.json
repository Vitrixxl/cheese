{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend": ["./backend/src"],
      "@backend/*": ["./backend/src/*"],
      "@shared": ["./shared/index.ts"],
      "@shared/*": ["./shared/*"],
      "@/*": ["./frontend/src/*"]
    }
  }
}
